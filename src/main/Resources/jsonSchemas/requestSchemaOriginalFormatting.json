{
  "$schema": "http://json-schema.org/schema#",
  "required": [
    "flexOffer",
    "flexRequest"
  ],
  "type": "object",
  "properties": {
    "flexOffer": {
      "required": ["ptuData"],
      "type": "object",
      "properties": {
        "ptuData": {
          "items": {
            "required": ["Disposition","Power","Price","Start"],
            "type": "object",
            "properties": {
              "Start": {
                "type": "integer"
              },
              "Price": {
                "type": "number"
              },
              "Disposition": {
                "type": "string"
              },
              "Power": {
                "type": "integer"
              }
            }
          },
          "type": "array"
        }
      }
    },
    "flexRequest": {
      "required": [
        "ptuData"
      ],
      "type": "object",
      "properties": {
        "ptuData": {
          "items": {
            "required": [
              "Disposition",
              "Power",
              "Price",
              "Start"
            ],
            "type": "object",
            "properties": {
              "Start": {
                "type": "integer"
              },
              "Price": {
                "type": "number"
              },
              "Disposition": {
                "type": "string"
              },
              "Power": {
                "type": "integer"
              }
            }
          },
          "type": "array"
        }
      }
    }
  }
}